@model Product
<div class="container">
    <div class="row pt-2 pb-2 ">
        <div class="col-12 d-flex align-items-center justify-content-between">
            <h3>Add A Category</h3>
        </div>
    </div>
    <form method="post">
        <input asp-for="BookId" hidden/>
        <div asp-validation-summary="All"></div>
        <div class="form-floating ">
            <input asp-for="BookTitle" class="form-control cname" placeholder="" />
            <label asp-for="BookTitle" for="cname"></label>
            <span class="span1 text-danger" asp-validation-for="BookTitle"></span>
        </div>
        <div class="form-floating mt-2">
            <input asp-for="Description" class="form-control cname" placeholder="" />
            <label asp-for="Description" for="cname"></label>
            <span class="span1 text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-floating mt-2">
            <input asp-for="ISBN" class="form-control cname" placeholder="" />
            <label asp-for="ISBN" for="cname"></label>
            <span class="span1 text-danger" asp-validation-for="ISBN"></span>
        </div>
        <div class="form-floating mt-2">
            <input asp-for="Author" class="form-control cname" placeholder="" />
            <label asp-for="Author" for="cname"></label>
            <span class="span1 text-danger" asp-validation-for="Author"></span>
        </div>
        <div class="form-floating mt-2">
            <input asp-for="Price" class="form-control cname" placeholder="" />
            <label asp-for="Price" for="cname"></label>
            <span class="span1 text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="row mt-3">
            <div class="col-6 d-flex">
                <button class="btn btn-info w-100" type="submit" name="submit">Update Product</button>
            </div>
            <div class="col-6 d-flex ">
                <a asp-action="Index" class="btn btn-secondary w-100">Back To Products</a>
            </div>
        </div>
        <div>
            <div>
                <select asp-for="CategoryId" asp-items="ViewBag.categoryList" >
                    @* <option value="Action" selected='@(Model.category.Name == "Action")'>Action</option>
                    <option value="Sci-Fi" selected='@(Model.category.Name == "Sci-Fi")'>Sci - Fi</option>
                    <option value="History" selected='@(Model.category.Name == "History")'>History</option> *@
                </select>
            </div>

        </div>
    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}