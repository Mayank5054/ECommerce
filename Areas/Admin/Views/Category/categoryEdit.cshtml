@model Category

<div class="container">
    <div class="row pt-2 pb-2 ">
        <div class="col-12 d-flex align-items-center justify-content-between">
            <h3>Add A Category</h3>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <form method="post">
      <input asp-for="CategoryId" hidden />
        <div class="form-floating ">
            <input asp-for="Name" class="form-control cname" placeholder="" />
            <label asp-for="Name" for="cname"></label>
            <span class="span1 text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-floating mt-2">
            <input asp-for="DisplayOrder" class="form-control cname" placeholder="" />
            <label asp-for="DisplayOrder" for="cname"></label>
            <span class="span1 text-danger" asp-validation-for="DisplayOrder"></span>
        </div>
        <div class="row mt-3">
            <div class="col-6 d-flex">
                <button class="btn btn-info w-100" type="submit" name="submit">Update Category</button>
            </div>
            <div class="col-6 d-flex ">
                <a asp-action="Index" class="btn btn-secondary w-100">Back To Category</a>
            </div>

        </div>


    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
